<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_color_5"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/app_color_4">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/selected_day_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/monday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/monday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/tuesday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/tuesday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/wednesday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/wednesday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/thursday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/thursday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/friday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/friday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/saturday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/saturday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/sunday_button"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:button="@null"
                                android:text="@string/sunday"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/style_day_button"
                                android:layout_margin="5dp"
                                tools:ignore="TooDeepLayout">
                            </RadioButton>
                        </RadioGroup>
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/app_color_3">

                <TimePicker
                    android:id="@+id/time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/app_color_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reservation_information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:id="@+id/cleaner_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/icon_color"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/gender_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textAlignment="center">
                        </TextView>

                        <TextView
                            android:id="@+id/age_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:textAlignment="center">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/house_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:id="@+id/methods_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:id="@+id/price_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/icon_color"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/app_color_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_warning"
                        android:layout_gravity="center"
                        android:contentDescription="@string/image">
                    </ImageView>

                    <TextView
                        android:id="@+id/warning_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/warning_message"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/booking_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#28A745"
                    android:layout_margin="1dp">
                </Button>

                <Button
                    android:layout_weight="1"
                    android:id="@+id/update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#007BFF"
                    android:layout_margin="1dp">
                </Button>

                <Button
                    android:layout_weight="1"
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#D33545"
                    android:layout_margin="1dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>